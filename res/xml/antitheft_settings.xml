<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/header_category_antitheft">


    <!-- Enabled -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/at_key_enabled"
        android:title="@string/at_key_enabled_title" />

    <!-- Server -->
    <EditTextPreference
        android:key="@string/at_key_server"
        android:summary="localhost"
        android:title="@string/at_key_server_title" />

    <!-- Anti theft check frequency -->
    <EditTextPreference
        android:key="@string/at_key_check_freq"
        android:summary="1"
        android:title="@string/at_key_check_freq_title" />

    <!-- Location Frequency -->
    <EditTextPreference
        android:key="location_frequency"
        android:summary="1"
        android:title="@string/at_key_location_freq_title" />

    <!-- Device ID -->
    <EditTextPreference
        android:key="@string/at_key_device_id"
        android:summary="id"
        android:title="@string/at_key_device_id_title" />

    <!-- Device Password -->
    <EditTextPreference
        android:key="@string/at_key_device_pass"
        android:summary="password"
        android:title="@string/at_key_device_pass_title" />


</PreferenceScreen>
